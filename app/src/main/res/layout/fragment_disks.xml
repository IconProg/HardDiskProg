<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackForBackground"
    tools:context=".MainPages.DisksFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blackForBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:background="@color/ColorForSearch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/filters_main"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="@color/blackForBottom"
    app:layout_constraintTop_toBottomOf="@id/top_menu"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/rating"
        android:layout_width="160dp"
        android:layout_height="20dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="16dp"
        app:cardBackgroundColor="@color/GrayForFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="По рейтингу"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:id="@+id/downForRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/upForRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/memory"
        android:layout_width="100dp"
        android:layout_height="20dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="16dp"
        app:cardBackgroundColor="@color/GrayForFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Память"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:id="@+id/downForMemory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/upForMemory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/price"
        android:layout_width="90dp"
        android:layout_height="20dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="16dp"
        app:cardBackgroundColor="@color/GrayForFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/memory"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"/>
        
        <ImageView
            android:id="@+id/downForPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/upForPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters_main">

        <ListView
            android:id="@+id/disksList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blackForBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/main_menu_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/main_menu"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/main_menu_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/about_prog_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/about_prog"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/instruction_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/intruction"
            android:layout_marginLeft="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/about_prog_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/favorite_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/favourites"
            android:layout_marginLeft="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/instruction_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/comparison_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/comparison"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/favorite_logo"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>