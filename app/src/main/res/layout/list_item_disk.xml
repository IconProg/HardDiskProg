<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/list_item_disk.xml -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/forDiskItem"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageViewDisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/mainTextDisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1231232131"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/imageViewDisk"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTextDisk"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/GrayForFilter"
        android:layout_toEndOf="@id/imageViewDisk"
        android:fontFamily="sans-serif-light"
        android:text="1231232131"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageViewHeart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/textSecond"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="254dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="41dp"
        android:layout_toEndOf="@+id/imageViewDisk"
        android:src="@drawable/heart2" />

    <TextView
        android:id="@+id/textViewTopNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textSecond"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="265dp"
        android:layout_toEndOf="@+id/imageViewDisk" />
</RelativeLayout>
